<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arash.altafi.weatherapp4">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.arash.altafi.weatherapp4.application.WeatherApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidDevChallenge"
        android:usesCleartextTraffic="true">

        <activity
            android:exported="true"
            android:name=".main_activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AndroidDevChallenge.NoActionBar.MainActivityTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>